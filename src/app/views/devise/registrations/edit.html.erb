<div class="text-center edit-page">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-signin', method: :put, multipart: :true }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <p class="alert text-center text-danger"><%= alert %></p>
    <h2>Edit <%= resource_name.to_s.humanize %></h2>
    <div class="avatar-img">
      <%= image_tag current_user.user_image_path, class: "img-thumbnail rounded-circle" %><br/>
    </div>
    <div class="input-group my-3">
      <div class="input-group-prepend">
        <%= f.file_field :picture,  class: "input-group-text", id: "inputGroupFileAddon01" %>
      </div>
    </div>
    <div>
      <%= f.label :username, class: "sr-only"%>
      <%= f.text_field :username, autofocus: true, placeholder: "Username", class: "form-control" %>
      <%= f.label :email, class: "sr-only" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <%= f.label :password, class: "sr-only"%> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "New password",  class: "form-control" %>
      <% if @minimum_password_length %>
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
      <%= f.label :password_confirmation, class: "sr-only"%>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password confirmation",  class: "form-control" %>
      <%= f.label :current_password, class: "sr-only" %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
      <%= f.submit "Update", class:"actions btn btn-lg btn-primary btn-block" %>
    </div>
    <div class="cancel mt-5">
      <h3>Cancel my account</h3>
      <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, 
:class =>"btn btn-lg btn-danger btn-block", method: :delete %></p>
    </div>
    <%= link_to "Back", :back %>
  <%end%>
</div>
